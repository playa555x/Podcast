# ============================================
# Backend Environment Variables (Example)
# ============================================

# ============================================
# Application
# ============================================
APP_NAME="GedächtnisBoost Premium API"
APP_VERSION="2.0.0"
ENV=development

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ============================================
# Frontend URL (CORS)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# Database
# ============================================
# Development: SQLite
DATABASE_URL=sqlite:///./tts_app.db

# Production: Neon PostgreSQL
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# TTS API Keys
# ============================================
SPEECHIFY_API_KEY=your_speechify_key_here
OPENAI_API_KEY=your_openai_key_here
ELEVENLABS_API_KEY=your_elevenlabs_key_here
GOOGLE_API_KEY=your_google_key_here

# ============================================
# AI Research & Content Generation
# ============================================
# Anthropic Claude API für Podcast-Research und Script-Generierung
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# MCP (Model Context Protocol) für YouTube & Web Scraping
MCP_YOUTUBE_ENABLED=false
MCP_WEB_SCRAPING_ENABLED=false

# ============================================
# Encryption
# ============================================
ENCRYPTION_KEY=your-encryption-key-here

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600
